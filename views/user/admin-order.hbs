<div class="container secondFont">
    <div class="row mt-sm-4 mt-3">
        <div class="col-sm-2 col-6 mt-sm-5 mt-4 text-center">
            <a href="/admin" class="btn btn-outline-primary secondFont rounded-0">return</a>
        </div>
        <div class="col-sm-2 col-6 mt-sm-5 mt-4 text-center">
            <form action="/admin/order" method="get">
                <input type="text" class="form-control form-control-sm border-top-0 border-right-0 rounded-0 border-dark secondFont text-dark" placeholder="order" id="checkData" name="checkData">
                <button type="submit" class="btn btn-outline-primary secondFont rounded-0 mt-sm-4 mt-4 mb-4">search</button>
            </form>
        </div>
        {{#each order}}
        <div class="col-sm-2 col-6 mt-sm-5 mt-4 mr-sm-3 pb-sm-2">
            <div class="row">
                <div class="col-sm-12 col-12">order id: {{orderId}}</div>
                <div class="col-sm-12 col-12">order date: {{orderDate}}</div>
                <div class="col-sm-12 col-12">order status: {{orderStatus}}</div>
                <div class="col-sm-12 col-12">order name: {{name}}</div>
                 <!-- Button trigger modal -->
                <div class="col-sm-12 col-12 mt-1">
                    <button type="button" class="btn btn-outline-primary secondFont rounded-0" data-toggle="modal" data-target="#modal{{this._id}}">details and edit</button>
                </div>
            </div>
        </div>
        {{/each}}
        {{#each order}}
        <div class="modal fade" id="modal{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
             <div class="modal-dialog modal-dialog-centered" role="document">
                 <div class="modal-content">
                     <div class="modal-body">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <form action="/admin/update-order" method="post">
                        <div class="row">
                            <input type="hidden" id="orderId" name="orderId" value="{{this._id}}">
                            <div class="col-sm-6 mb-sm-3 col-7">order id: {{orderId}}</div>
                            <div class="col-sm-6 mb-sm-3 col-7">order date: {{orderDate}}</div>
                            <div class="col-sm-6 mb-sm-3 col-7">payment id: {{paymentId}}</div>
                            <div class="col-sm-6 mb-sm-3 col-7">user id: {{user}}</div>
                            <div class="col-sm-6 mb-sm-3 col-7">name on the order: <br>
                                <input id="orderName" name="orderName" class="secondFont" type="text" value="{{name}}" required>
                            </div>
                            <div class="col-sm-6 mb-sm-3 col-7">address: <br>
                                <input id="orderAddress" name="orderAddress" class="secondFont" type="text" value="{{address}}" required>
                            </div>
                            <div class="col-sm-6 mb-sm-3 col-7">order status: <br>
                                <input id="orderStatus" name="orderStatus" class="secondFont" type="text" value="{{orderStatus}}" required>
                            </div>
                             <div class="col-sm-12 mt-sm-3 mt-3 text-center">
                                <button type="submit" class="btn btn-outline-primary secondFont rounded-0">save</button>
                            </div>
                        </div>
                        </form>
                     </div>
                 </div>
             </div>
        </div>
        {{/each}}
    </div>
</div>