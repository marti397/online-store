<div class="container secondFont">
    <div class="row mt-sm-4 mt-3">
        <div class="col-sm-2 col-3 mt-sm-5 mt-4 text-center">
            <a href="/admin" class="btn btn-outline-primary secondFont rounded-0">return</a>
        </div>
        <div class="col-sm-2 col-3 mt-sm-5 mt-4 text-center">
        <button type="button" class="btn btn-outline-primary secondFont rounded-0" data-toggle="modal" data-target="#add">add</button>
        <!-- Modal for adding -->
        <div class="modal fade" id="add" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                <div class="modal-body">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <form action="/admin/add-supplier" method="post">
                        <div class="row">
                            <div class="col-sm-6 mb-sm-3 mb-3 col-12">name: <br>
                                <input id="name" name="name" class="secondFont" type="text" required>
                            </div>
                            <div class="col-sm-6 mb-sm-3 mb-3 col-12">address: <br>
                                <input id="address" name="address" class="secondFont" type="text">
                            </div>
                            <div class="col-sm-6 mb-sm-3 mb-3 col-12">email: <br>
                                <input id="email" name="email" class="secondFont" type="email">
                            </div>
                            <div class="col-sm-6 mb-sm-3 mb-3 col-12">comments: <br>
                                <textarea class="secondFont" name="comments" id="comments" cols="20" rows="4"></textarea>
                            </div>
                            <div class="col-sm-6 mb-sm-3 mb-3 col-12">photo: <br>
                                <input type="file" id="myphotofile" name="myphotofile" class="secondFont" required>
                            </div>
                            <div class="col-sm-12 col-12 mt-3">
                                <button type="submit" class="btn btn-outline-primary secondFont rounded-0">add</button>
                            </div>
                        </div>
                    </form>
                </div>
                </div>
            </div>
        </div>
        <!-- Modal for adding -->
        </div>
        <!-- search feature -->
        <div class="col-sm-2 col-6 mt-sm-5 mt-4 text-center">
             <form action="/admin/supplier" method="get">
                <input type="text" class="form-control form-control-sm border-top-0 border-right-0 rounded-0 border-dark secondFont text-dark" placeholder="supplier name" id="checkData" name="checkData">
                <button type="submit" class="btn btn-outline-primary secondFont rounded-0 mt-sm-4 mt-4 mb-4">search</button>
            </form>
        </div>
        <!-- end of search feature -->
        {{#each supplier}}
        <div class="col-sm-2 col-4 mt-sm-5 mt-5">
            <div class="row">            
                <div class="col-sm-12 col-12 text-center">{{name}}</div>
                <!-- Button trigger modal -->
                <div class="col-sm-6 col-12 mt-1">
                    <button type="button" class="btn btn-outline-primary secondFont rounded-0" data-toggle="modal" data-target="#modal{{this._id}}">details</button>
                </div>
                <!-- Button trigger modal -->
                <div class="col-sm-6 col-12 mt-1">
                    <button type="button" class="btn btn-outline-danger secondFont rounded-0" data-toggle="modal" data-target="#delete{{this._id}}">delete</button>
                </div>
            </div>
        </div>
        {{/each}}
        {{#each supplier}}
            <!-- Modal for updating -->
            <div class="modal fade" id="modal{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                <div class="modal-body">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                    <form action="/admin/update-supplier" method="post">
                        <div class="row">
                            <input type="hidden" id="supplierId" name="supplierId" value="{{this._id}}">
                            <input type="hidden" id="hiddenPhoto" name="hiddenPhoto" value="{{photo}}">
                            <div class="col-sm-6 mb-sm-3 mb-3 col-12">name: <br>
                                <input id="name" name="name" class="secondFont" type="text" value="{{name}}">
                            </div>
                            <div class="col-sm-6 mb-sm-3 mb-3 col-12">address<br>
                                <input id="address" name="address" class="secondFont" type="text" value="{{address}}">
                            </div>
                            <div class="col-sm-6 mb-sm-3 mb-3 col-12">comments: <br>
                                <textarea class="secondFont" name="comments" id="comments" cols="20" rows="4">{{comments}}</textarea>
                            </div>    
                            <div class="col-sm-6 mb-sm-3 mb-3 col-12">email: <br>
                                <input id="email" name="email" class="secondFont" type="email" value="{{email}}">
                            </div>
                            <div class="col-sm-6 mb-sm-3 mb-3 col-12">change photo: <br>
                                <input type="file" id="myphotofileupdate" name="myphotofileupdate" class="secondFont">
                            </div>
                            <div class="col-sm-6 mb-sm-3 mb-3 col-12 text-center">
                                <button type="submit" class="btn btn-outline-success secondFont rounded-0">save</button>
                            </div>
                            <div class="col-sm-12 mb-sm-3 mb-3 col-12">
                                <img src="{{photo}}" class="img-fluid" alt="img" id="displayimg">
                            </div>
                        </div>
                    </form>
                </div>
                </div>
            </div>
            </div>
            <!-- Modal for deleting-->
            <div class="modal fade" id="delete{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                <div class="modal-body">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                    <form action="/admin/delete-supplier" method="post">
                        <input type="hidden" id="supplierId" name="supplierId" value="{{this._id}}">
                        <div class="row">
                            <div class="col-sm-7 col-12">
                                <img src="{{photo}}" class="img-fluid" alt="img">
                            </div>
                            <div class="col-sm-5 col-12 mt-1">
                                <button type="submit" class="btn fluid btn-outline-danger secondFont rounded-0">delete forever</button>
                            </div>
                        </div>
                    </form>
                </div>
                </div>
            </div>
            </div>
        {{/each}}
    </div>
</div>