<div class="container secondFont">
  <div class="row mt-sm-3 mt-3">
    <div class="col">FINALIZAR PAGO</div>
  </div>
  <div class="row mt-sm-3 mt-3 text-danger">
    <div id="payment-errors" class="col {{#if noError}}hidden{{/if}}">{{messages}}</div>
  </div>
  <div class="row mt-sm-3 mt-3">
    <div class="col font-weight-bold text-uppercase">
      Total de la compra es ${{totalPrice}} MXN
    </div>
  </div>
  <form action="/checkout" method="post" id="payment-form">
  <div class="row">
    <div class="col-sm-6 mt-sm-3">
      <input type="text" class="form-control form-control-sm border-top-0 border-right-0 rounded-0 border-dark secondFont text-dark" id="name" placeholder="Nombre" name="name" required>
    </div>
    <div class="col-sm-6 mt-sm-3">
      <input type="text" class="form-control form-control-sm border-top-0 border-right-0 rounded-0 border-dark secondFont text-dark" id="address" placeholder="Direccion" name="address" required>
    </div>
    <div class="col-sm-6 mt-sm-3">
      <div id="card-element">
      <!-- a Stripe Element will be inserted here. -->
      </div>
      <!-- Used to display form errors -->
      <div id="card-errors" role="alert" class="text-danger"></div>
    </div>
    <div class="col-sm-6 mt-sm-3"><input type="submit" class="submit btn btn-dark secondFont rounded-0" id="checkoutBtn" value="Completar la compra"></div>
  </div>
  </form>
</div>
<script src="javascripts/checkout.js"></script>