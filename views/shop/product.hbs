<div class="container">
    <div class="row">
        <div class="col text-center secondFont text-uppercase mt-sm-3 mt-3">
            {{title}}
        </div>
    </div>
    <div class="row secondFont mt-sm-3 mt-3">
        <div class="col">
            FILTROS

            <form action="/product/todo" method="get">
                <div class="col-sm-6 mb-sm-3 col-6">
                                <select class="custom-select secondFont" id="filtroPrecio" name="filtroPrecio">
                                    <option selected>Precio?</option>
                                    <option value="caro">Caro</option>
                                    <option value="barato">Barato</option> 
                                </select>    
                            </div>
                <button type="submit" class="btn btn-outline-dark secondFont rounded-0 mt-sm-5 mt-3 mb-5">Filtrar</button>
            </form>







        </div>
    </div>
    <!--bueno-->
    <div class="row">
        {{#each products}}
        <div class="col-sm-3 col-6 mt-sm-5 mt-4 productImg">
            <!--<img class="img-fluid" src="{{ imagePath }}" alt="product">-->
            <div id="carouselExampleControls{{this._id}}" class="carousel slide carousel-fade" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                    <img class="d-block w-100" src="{{ imagePath }}" alt="First slide">
                    </div>
                    <div class="carousel-item">
                    <img class="d-block w-100" src="{{ imagePath }}" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                    <img class="d-block w-100" src="{{ imagePath }}" alt="Third slide">
                    </div>
                    <div class="secondFont"><a href="/product/{{this._id}}/detail" class="stretched-link"></a></div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls{{this._id}}" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon productArrowPrev" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls{{this._id}}" role="button" data-slide="next">
                    <span class="carousel-control-next-icon productArrowNext" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <!--End of Carousel-->
            <div class="secondFont">{{title}}</div>
            <div class="secondFont">${{price}} MXN</div>
            
            <!-- Button trigger modal -->
            <button type="button" class="btn modalBtn position-absolute fixed-top ml-2" data-toggle="modal" data-target="#exampleModalCenter{{this._id}}">
                <img src="/images/search.svg" alt="search" width="20" height="20" >
            </button>
            <!-- Modal -->
            <div class="modal fade" id="exampleModalCenter{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                <div class="modal-content">
                <div class="modal-body">
                    <div class="container-fluid">
                        <div class="row">
                            <!-- start of carousel inside modal -->
                            <div class="col">
                                <div id="carousel{{this._id}}" class="carousel slide carousel-fade" data-interval="3000" data-ride="carousel">
                                    <ol class="carousel-indicators">
                                        <li data-target="#carousel{{this._id}}" data-slide-to="0" class="active"></li>
                                        <li data-target="#carousel{{this._id}}" data-slide-to="1"></li>
                                        <li data-target="#carousel{{this._id}}" data-slide-to="2"></li>
                                    </ol>
                                    <div class="carousel-inner">
                                        <div class="carousel-item active">
                                        <img class="img-fluid" src="{{ imagePath }}" alt="product">
                                        </div>
                                        <div class="carousel-item">
                                        <img class="img-fluid" src="/images/products/im9.jpg" alt="product">
                                        </div>
                                        <div class="carousel-item">
                                        <img class="img-fluid" src="{{ imagePath }}" alt="product">
                                        </div>
                                    </div>
                                    <a class="carousel-control-prev" href="#carousel{{this._id}}" role="button" data-slide="prev">
                                        <span class="" aria-hidden="true"></span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                    <a class="carousel-control-next" href="#carousel{{this._id}}" role="button" data-slide="next">
                                        <span class="" aria-hidden="true"></span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </div>
                            </div>
                            <div class="col">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                                </button>
                                <div class="secondFont mt-4 font-weight-normal">{{title}}</div>
                                <div class="secondFont mt-1">{{descr}}</div>
                                <div class="secondFont mt-1 font-weight-normal">${{price}} MXN</div>
                                <div class="secondFont mt-4">Envios y devoluciones gratis</div>
                                <div class="secondFont">En ordenes de mas de $2,000 MX</div>
                                <div class="secondFont mt-4">Descripci√≥n</div>
                                <div class="secondFont">{{details}}</div>
                                <a href="/add-to-cart/{{this._id}}" class="btn btn-outline-dark position-absolute fixed-bottom secondFont rounded-0">Agregar</a>
                            </div>
                        </div>
                    </div>
                </div>
                </div>
            </div>
            </div>
            <!-- End of Modal -->
        </div>
        {{/each}}
    </div>
</div>